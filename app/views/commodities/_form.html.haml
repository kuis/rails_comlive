= form_for @commodity do |f|
  = errors_for @commodity
  .row
    .col-md-6
      .form-group
        = f.label :name
        = f.text_field :name, class: "form-control"
    .col-md-6
      .form-group
        = f.label :measured_in
        = f.select :measured_in, unitwise_atoms, { prompt: t(".unit_prompt") }, class: "form-control select2"
  .form-group
    = f.label :short_description
    = f.text_field :short_description, class: "form-control"
  .form-group
    = f.label :long_description
    = f.text_area :long_description, rows: 5, class: "form-control"
  .checkbox.checkbox-success
    = f.check_box :generic, {}, "true", "false"
    = f.label :generic
  #commodity-brand.form-group
    = f.label :brand
    = f.select :brand_id, Brand.all.map{|b| [b.name, b.id]}, { prompt: t(".brand_prompt") },  class: "form-control select2"
  = f.submit class: "btn btn-primary"
