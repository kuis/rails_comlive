- content_for :share do
  = link_to "#", class: "btn-share", data: { toggle: "modal", target: "#modalShare" }, title: "Share" do
    %i.fa.fa-share-alt
    Share

%section.app-content
  - if @brand
    .box.commodity-brand.p-sm
      .row.no-gutter
        .row-sm-height
          .col-md-6.col-sm-height.col-sm-middle
            = link_to @brand, class: "brand-logo" do
              = image_tag @brand.logo
            = link_to @brand.name, @brand, class: "fz-lg p-l-sm brand-title"

          .hidden-xs.col-md-6.col-sm-height.col-sm-middle.text-right
            - @brand.commodities.limit(3).each do |commodity|
              .hidden-sm.avatar.avatar-md.avatar-circle.m-r-sm
                = link_to commodity do
                  = image_tag "http://placehold.it/60x60"

            .pull-right.text-center
              = link_to "#", class: "m-b-0" do
                %span.fz-xl.fw-500.lh-1.block= @brand.commodities.count
                = "Commodity".pluralize(@brand.commodities.count)

  .box.m-0
    .row
      .col-md-12
        .commodity-heading
          %h1.p-md.pull-left= @commodity.name

          - if @commodity.generic?
            .pull-right.m-sm
              .text-center
                %p.m-b-xs.fz-sm Is it your commodity?
                = link_to "#", class: "btn btn-outline rounded btn-primary" do
                  %i.fa.fa-gavel.fa-md
                  Claim This Commodity

    - if @state
      .row
        .col-md-12
          .alert.alert-warning.commodity-alert{:role => "alert"}
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              -#%span{"aria-hidden" => "true"} Ã—
            %h4 State: #{@state.status.titleize}
            %p= @state.info
            %p= link_to "Read More", @state.url, target: "_blank", class: "alert-link"
            - if current_app
              - if policy(current_app).edit?
                .actions
                  = link_to edit_app_commodity_reference_state_path(current_app,@state.commodity_reference,@state), class: "icon icon-circle icon-sm", title: "Edit" do
                    %i.fa.fa-pencil
                  = link_to app_commodity_reference_state_path(current_app,@state.commodity_reference,@state), method: :delete, class: "icon icon-circle icon-sm", title: "Delete" do
                    %i.fa.fa-trash

  .row
    .col-md-12
      %hr.m-0/
      .m-b-lg.nav-tabs-horizontal
        .segment-add
          = render 'tab_menu'
          .segment-actions
            = link_to "#", class: "btn-add icon icon-circle icon-md", data: { toggle: "modal", target: "#modalAdd" } do
              %i.fa.fa-plus
        .tab-content
          = render 'summary_tab'
          = render 'specifications_tab'
          = render 'packagings_tab'
          = render 'standards_tab'
          = render 'barcodes_tab'
          = render 'references_tab'
          = render 'classifications_tab'
          = render 'links_tab'

  = render 'add_items' if user_signed_in?
  = render 'shared/social_share', share_url: slugged_commodity_url(@commodity.uuid,@commodity.name.parameterize)

