<!-- Modal -->
<div class="modal fade" id="hscodeModal" tabindex="-1" role="dialog" aria-labelledby="hscodeModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="packagingModalLabel">Assign HSCODE</h4>
      </div>
      <div class="modal-body">
        <%= form_for [@app, @commodity_reference] do |f| %>
            <div class="form-group">
              <%= f.label :section %>
              <%= f.select :hscode_section_id, options_for_hscode_sections, { prompt: "Select Section" }, class: "form-control", data: { href: hscode_chapters_path } %>
            </div>
            <div class="form-group">
              <%= f.label :chapter %>
              <%= f.select :hscode_chapter_id, [], { prompt: "Select Chapter" }, class: "form-control", data: { href: hscode_headings_path } %>
            </div>
            <div class="form-group">
              <%= f.label :heading %>
              <%= f.select :hscode_heading_id, [], {  prompt: "Select Heading" }, class: "form-control", data: { href: hscode_subheadings_path } %>
            </div>
            <div class="form-group">
              <%= f.label :subheading %>
              <%= f.select :hscode_subheading_id, [], { prompt: "Select Sub Heading" }, class: "form-control" %>
            </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="assign-hscode">Submit</button>
      </div>
    </div>
  </div>
</div>
