= form_for object_url(@parent, @barcode), html: { class: "form-horizontal" } do |f|
  = errors_for @barcode
  .form-group
    = f.label :format, class: "col-sm-4 control-label"
    .col-sm-6
      = f.select :format, options_for_barcodes, {}, class: "form-control"
  .form-group
    = f.label :content, class: "col-sm-4 control-label"
    .col-sm-6
      = f.text_field :content, class: "form-control"
  .form-group
    = f.label :publishing, class: "col-sm-4 control-label"
    .col-sm-6
      = f.select :visibility, options_for_visibility(@barcode), {}, class: "form-control"
  .row
    .col-sm-8.col-sm-offset-4
      = f.submit class: "btn btn-primary"
